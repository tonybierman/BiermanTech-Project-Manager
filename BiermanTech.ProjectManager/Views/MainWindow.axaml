<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BiermanTech.ProjectManager.ViewModels"
        xmlns:controls="using:BiermanTech.ProjectManager.Controls"
        x:Class="BiermanTech.ProjectManager.Views.MainWindow"
        Title="Project Manager - Gantt Chart" Width="800" Height="400"
        x:DataType="vm:MainWindowViewModel">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Command Buttons -->
		<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
			<Button Content="Create Task" Command="{Binding CreateTaskCommand}" Margin="5"/>
			<Button Content="Update Task" Command="{Binding UpdateTaskCommand}" Margin="5"/>
			<Button Content="Delete Task" Command="{Binding DeleteTaskCommand}" Margin="5"/>
			<Button Content="Undo" Command="{Binding UndoCommand}" Margin="5"/>
		</StackPanel>

		<!-- Gantt Chart -->
		<controls:GanttChartControl Grid.Row="1" Tasks="{Binding Tasks}" SelectedTask="{Binding SelectedTask, Mode=TwoWay}"/>
	</Grid>
</Window>