<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BiermanTech.ProjectManager.ViewModels"
        xmlns:controls="using:BiermanTech.ProjectManager.Controls"
        x:Class="BiermanTech.ProjectManager.Views.MainWindow"
        Title="BiermanTech Project Manager" Width="800" Height="600"
        x:DataType="vm:MainWindowViewModel">
	<Window.Styles>
		<Style Selector="Button">
			<Setter Property="Margin" Value="5"/>
		</Style>
	</Window.Styles>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Toolbar -->
		<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
			<Button Content="Add Task" Command="{Binding CreateTaskCommand}"/>
			<Button Content="Update Task" Command="{Binding UpdateTaskCommand}"/>
			<Button Content="Delete Task" Command="{Binding DeleteTaskCommand}"/>
			<Button Content="Undo" Command="{Binding UndoCommand}"/>
			<Button Content="Redo" Command="{Binding RedoCommand}"/>
		</StackPanel>

		<!-- Gantt Chart -->
		<controls:GanttChartControl Grid.Row="1" Tasks="{Binding Tasks}" SelectedTask="{Binding SelectedTask}"/>
	</Grid>
</Window>